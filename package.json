{
  "name": "mdai-monorepo",
  "version": "1.0.0",
  "description": "MDai Learning Platform - Monorepo",
  "private": true,
  "workspaces": [
    "client",
    "admin",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:admin\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:admin": "npm run dev --workspace=admin",
    "build": "npm run build --workspace=client && npm run build --workspace=admin",
    "build:client": "npm run build --workspace=client",
    "build:admin": "npm run build --workspace=admin",
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=admin"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

